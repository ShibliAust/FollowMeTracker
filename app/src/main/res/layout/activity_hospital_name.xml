<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activities.hospitalNameActivity"
    android:background="@drawable/back6">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hospitalName_listView"
        android:layout_below="@+id/start_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FIND"
        android:id="@+id/start_button"
        android:layout_below="@+id/hospital_search_textView"
        android:layout_centerHorizontal="true"
        android:width="100dp"
        android:textSize="20dp"
        android:typeface="monospace"
        android:clickable="true"
        android:textColor="#320202"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Click &quot;FIND&quot; to find Hospitals near You!"
        android:textColor="#320202"
        android:id="@+id/hospital_search_textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:typeface="monospace"
        android:textSize="18dp" />
</RelativeLayout>
