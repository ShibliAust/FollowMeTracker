<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back6">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find Hospitals &amp; Blood Bank"
        android:id="@+id/Hospital_blood_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="false"
        android:layout_marginTop="50dp"
        android:clickable="true"
        android:textColor="#320202"
        android:textSize="15dp"
        android:typeface="monospace" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find Friend&apos;s Location"
        android:id="@+id/friens_loc_button"
        android:layout_below="@+id/Hospital_blood_button"
        android:layout_alignParentStart="true"
        android:typeface="monospace"
        android:textSize="15dp"
        android:clickable="true"
        android:textColor="#320202" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Location"
        android:id="@+id/Location_Button"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/friens_loc_button"
        android:clickable="true"
        android:typeface="monospace"
        android:textSize="15dp"
        android:textColor="#320202" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:id="@+id/about_button"
        android:layout_below="@+id/my_address_button"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:textColor="#320202"
        android:textSize="15dp"
        android:typeface="monospace" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Address"
        android:id="@+id/my_address_button"
        android:layout_below="@+id/Location_Button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:typeface="monospace"
        android:textSize="15dp"
        android:textColor="#320202"
        android:clickable="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_listResult"
        android:layout_below="@+id/about_button"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Welcome User !!"
        android:textColor="#320202"
        android:id="@+id/home_page_textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:typeface="monospace"
        android:textSize="25dp"
        android:gravity="center" />

</RelativeLayout>
